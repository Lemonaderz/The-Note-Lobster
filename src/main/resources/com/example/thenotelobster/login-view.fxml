<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.thenotelobster.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
<!--TITLE-->
    <Label text="Read to take notes? Log back in!"
           wrapText="true"/>

<!--USER DETIALS BOXES-->
    <TextArea fx:id="emailText"
              wrapText="true" editable="true"
              prefHeight="40" maxWidth="400"/>
    <TextArea fx:id="usernameText"
              wrapText="true" editable="true"
              prefHeight="40" maxWidth="400"/>

<!--LOG IN BUTTON-->
    <Button fx:id="loginButton" text="Log in" disable="false"
            prefWidth="300.0" prefHeight="35.0"/>

    <Label text="Don't have an account?"/>
    <Button fx:id="createAccButton" text="Create Account" disable="false"
            prefWidth="250.0" prefHeight="25.0"/>



</VBox>
